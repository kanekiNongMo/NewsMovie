.news-list {
  padding: 30rpx;
}

.item-head {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.author-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.news-item {
  padding: 20rpx;
  background-color: #fff;
}

.author {
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #2b2b2b;
}

.public-date {
  padding-left: 20rpx;
  font-size: 28rpx;
}

.item-title {
  padding-bottom: 20rpx;
  font-size: 28rpx;
  color: #2b2b2b;
}

.news-image {
  margin-top: 20rpx;
  width: 100%;
  height: 400rpx;
}

.description {
  font-size: 28rpx;
  color: #2b2b2b;
}

.movie-rating image {
  width: 30rpx;
  height: 30rpx;
}
.movie-item {
  width: 210rpx;
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
}
.movie-item text.title {
  font-size: 28rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.movie-rating text {
  padding: 10rpx;
  font-size: 24rpx;
  color: #8a8a8a;
}

.movie-image {
  width: 210rpx;
  height: 300rpx;
}
.loading {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #8a8a8a;
}
.loading image {
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  animation: loading 3s infinite linear;
}
@keyframes loading {
  from {
    transform :rotate(0deg);
  }
  to {
    transform :rotate(360deg);
  }
}
