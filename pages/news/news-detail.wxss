/* pages/news/news-detail.wxss */
.detail-image {
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
  width: 100%;
  height: 400rpx;
  background-position: center;
}

.author-info {
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.author-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
}

.author {
  padding-left: 20rpx;
  font-size: 36rpx;
  color: #2b2b2b;
}

.public-date {
  padding-left: 20rpx;
  font-size: 28rpx;
}

.title {
  margin-bottom: 20rpx;
  padding: 0 20rpx 20rpx;
  font-size: 28rpx;
  color: #2b2b2b;
  border-bottom: 1px #eee solid;
}

.content {
  padding: 0 30rpx 30rpx;
  font-size: 28rpx;
  color: #2b2b2b;
}

.news-share {
  margin: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  position: relative;
}

.news-share image {
  width: 40rpx;
  height: 40rpx;
}

.news-share button {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  border-radius: 100%;
  opacity: 0;
}
